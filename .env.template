# =============================================================================
# CORTEX-PRIME MK1 ENVIRONMENT CONFIGURATION
# =============================================================================
# Complete environment configuration for all Cortex-Prime services

# --- PROJECT CONFIGURATION ---
PROJECT_NAME=cortex_prime

# --- LLM PROVIDER API KEYS ---
# Required for the llm_gateway service to function.
GEMINI_API_KEY=<your_google_ai_gemini_api_key>
OPENAI_API_KEY=<your_openai_api_key_optional>
ANTHROPIC_API_KEY=<your_anthropic_api_key_optional>

# --- GENERAL CONFIGURATION ---
LOG_LEVEL=DEBUG

# --- DATABASE CONFIGURATION ---
NEO4J_USER=neo4j
NEO4J_PASSWORD=cortex_prime_mk1
NEO4J_HTTP_HOST_PORT=7474
NEO4J_BOLT_HOST_PORT=7687

# --- CACHE CONFIGURATION ---
REDIS_HOST_PORT=6380

# --- SERVICE PORT CONFIGURATION ---
CHIMERA_CORE_HOST_PORT=8001
GATEWAY_HOST_PORT=8080
LLM_GATEWAY_HOST_PORT=8081
MANIFEST_INGESTION_HOST_PORT=8082
RUNTIME_EXECUTOR_HOST_PORT=8083
WEB_CLIENT_HOST_PORT=8889
CHAT_TEST_HOST_PORT=8888

# --- MANIFEST INGESTION SERVICE ---
